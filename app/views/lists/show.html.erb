<p style="color: green"><%= notice %></p>

  <div class="card-category card-large">
    <h1><%= @list.name %></h1>
  </div>

<p><strong>Bookmarks</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %></li>
    <%= link_to 'Remove', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'You sure...? 🧐' } %>
  <% end %>
</ul>
<br>

<div>
  <%= link_to "Back to lists", lists_path %>
</div>

<div>
  <button type="button" class="btn btn-flat">
    add a movie
  </button>
  <%= link_to "delete this list", list_path(@list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
</div>
